@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Ouch - Error Occured";
    var LineNumber = new System.Diagnostics.StackTrace(Model.Exception, true).GetFrame(0).GetFileLineNumber();
    var FileName = new System.Diagnostics.StackTrace(Model.Exception, true).GetFrame(0).GetFileName();
    var MethodName = new System.Diagnostics.StackTrace(Model.Exception, true).GetFrame(0).GetMethod().Name;

    <style>
        .info, .success, .warning, .error, .validation {
            border: 1px solid;
            margin: 10px 0px;
            padding: 15px 10px 15px 50px;
            background-repeat: no-repeat;
            background-position: 10px center;
        }

        .info {
            color: #00529B;
            background-color: #BDE5F8;
            background-image: url('https://i.imgur.com/ilgqWuX.png');
        }

        .success {
            color: #4F8A10;
            background-color: #DFF2BF;
            background-image: url('https://i.imgur.com/Q9BGTuy.png');
        }

        .warning {
            color: #9F6000;
            background-color: #FEEFB3;
            background-image: url('https://i.imgur.com/Z8q7ww7.png');
        }

        .error {
            color: #D63301;
            border: 1px solid #D63301;
            background-color:#ffffff;
            /*background-image: url('https://i.imgur.com/GnyDvKN.png');*/
            margin: 20px 20px 20px 20px;
            padding: 20px 20px 20px 20px;
        }

        .validation {
            color: #D63301;
            background-color: #FFCCBA;
            background-image: url('https://i.imgur.com/GnyDvKN.png');
        }
    </style>
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <div class="error">
        <h2>Error.</h2>
        <h5>Error Message : @Model.Exception.ToString()</h5>
        @*<h5>Error Message : @Model.Exception.Message</h5>*@
        @*<h5>File Name # : @FileName</h5>*@
        <h5>Method Name # : @MethodName</h5>
        <h5>Error Line # : @LineNumber</h5>
    </div>

</body>
</html>