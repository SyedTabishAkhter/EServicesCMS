@{
    ViewBag.Title = "Index";
    @*<script src="~/Scripts/jquery-3.6.0.min.js"></script>*@
    <script src="https://code.jquery.com/jquery-1.6.3.min.js"></script>
    <style>
        .subheader {
            width: 100%;
            background: rgba(255,255,255,0.95);
            box-shadow: 0 0 10px #b68a35;
            text-transform: uppercase;
            color: #302d2d;
        }
    </style>
}
<article>
    <div class="header">
        <div class="left">
            <div class="crumbs">
                <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Dashboard", null, Request.Url.Scheme, null) +"?id=1")"><h1 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblTitle", "Dashboard")</h1></a>
            </div>
        </div>
    </div>
    <div class="content p20 tac">

        <div class="subheader"><h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblQuickLinks", "Quick Links")</h4></div>
        <div class="blocks row page_links justify-content-center">

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_MANAGE_SERVICEGUIDE") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "ServiceGuide", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblManageServiceGuide", "Manage Service Guide")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_MANAGE_SERVICES") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Services", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblManageServices", "Manage Services")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_NO_ACTIONS") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("NoAction", "Services", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblManageServiceNoActions", "Services No Actions")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_SERVICE_REQUESTS") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("ServiceRequests", "Services", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblServiceRequests", "Service Requests")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_USER_MANAGEMENT") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Users", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblUserManagement", "User Management")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_LOOKUPS") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Lookup", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblLookups", "Lookups")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_USER_ATTRIBUTES") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("UserAttributes", "Lookup", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblAttributes", "SSO Attributes")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_MANAGE_LABELS") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Labels", "Lookup", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Lookup", "lblManageLabels", "Manage Labels")</h4>
                        </a>
                    </div>
                }
            }



            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_AUDIT_TRIAL") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "AuditTrial", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblAuditTrial", "Audit Trail")</h4>
                        </a>
                    </div>
                }
            }

            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_ERROR_LOG") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Logger", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblErrorLog", "Error Log")</h4>
                        </a>
                    </div>
                }
            }





            @{
                if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_API_MANAGEMENT") == true)
                {
                    <div class="col-12 col-md-4 col-xl-3" style="display:none;">
                        <a href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Sources", "LookUp", null, Request.Url.Scheme, null) +"?id=1")" class="card br5 mb30 pt20 pb10">
                            <i class="ico xl services"></i>
                            <h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblSources", "API Sources")</h4>
                        </a>
                    </div>
                }
            }
        </div>

        @{
            if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_STATISTICS") == true)
            {
                <div class="subheader"><h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblStatistics", "Statistics")</h4></div>
                <div class="blocks row stats gx-4 justify-content-center">
                    @{
                        var statistics = EServicesCms.Common.DbManager.GetDashboard();
                        if (statistics != null)
                        {
                            foreach (var iStatistic in statistics)
                            {
                                <div class="col-12 col-md-4 col-xl-2"><div class="stat"><i><div class="circleBlack">@iStatistic.Value</div></i><b>@iStatistic.Key</b></div></div>
                            }
                        }
                    }
                </div>
            }

            if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_DEPT_STATISTICS") == true)
            {
                <div class="subheader"><h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblStatisticsByDepartments", "Services by Departments")</h4></div>
                <div class="blocks row stats gx-4 justify-content-center">
                    @{
                        var statisticsDept = EServicesCms.Common.DbManager.GetDashboardByDepartment();
                        if (statisticsDept != null)
                        {
                            foreach (var iStatisticD in statisticsDept)
                            {
                                <div class="col-12 col-md-4 col-xl-2"><div class="stat"><i><div class="circleBlack">@iStatisticD.Value</div></i><b>@iStatisticD.Key</b></div></div>
                            }
                        }
                    }
                </div>
            }

            if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_ENTITIES_STATISTICS") == true)
            {
                <div class="subheader"><h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblStatisticsByEntities", "Services by Entities")</h4></div>
                <div class="blocks row stats gx-4 justify-content-center">
                    @{
                        var statisticsEntity = EServicesCms.Common.DbManager.GetDashboardByServiceEntities();
                        if (statisticsEntity != null)
                        {
                            foreach (var iStatisticD in statisticsEntity)
                            {
                                <div class="col-12 col-md-4 col-xl-2"><div class="stat"><i><div class="circleBlack">@iStatisticD.Value</div></i><b>@iStatisticD.Key</b></div></div>
                            }
                        }
                    }
                </div>
            }

            if (EServicesCms.Common.Security.isUserAuthorized("MOF_ESRV_TYPE_STATISTICS") == true)
            {
                <div class="subheader"><h4 class="title">@EServicesCms.Common.DbManager.GetText("Dashboard", "lblStatisticsByServiceTypes", "Services by Types")</h4></div>
                <div class="blocks row stats gx-4 justify-content-center">
                    @{
                        var statisticsTypes = EServicesCms.Common.DbManager.GetDashboardByServiceTypes();
                        if (statisticsTypes != null)
                        {
                            foreach (var iStatisticD in statisticsTypes)
                            {
                                <div class="col-12 col-md- col-xl-3"><div class="stat"><i><div class="circleBlack">@iStatisticD.Value</div></i><b>@iStatisticD.Key</b></div></div>
                            }
                        }
                    }
                </div>
            }
        }


    </div>
</article>
<script type="text/javascript">
    var language = "@EServicesCms.Common.Helper.CurrentLanguage()";
     @Html.Raw(ViewBag.PageAlertCodes);
</script>

