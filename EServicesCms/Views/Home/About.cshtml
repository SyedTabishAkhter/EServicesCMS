@model EServicesCms.Models.BaseResponse
@{
    Layout = null;
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 13px;
        }
        .success, .warning, .error, .validation {
            border: 1px solid;
            margin: 10px 0px;
            padding: 15px 10px 15px 50px;
            background-repeat: no-repeat;
            background-position: 10px center;
        }
        .info {
            color: #00529B;
            /*background-color: #fbf7f1;*/
            /*background-image: url('https://i.imgur.com/ilgqWuX.png');*/
        }
        .success {
            color: #4F8A10;
            background-color: #DFF2BF;
            background-image: url('https://i.imgur.com/Q9BGTuy.png');
        }
        .warning {
            color: #9F6000;
            background-color: #FEEFB3;
            background-image: url('https://i.imgur.com/Z8q7ww7.png');
        }
        .error {
            color: #D8000C;
            background-color: #FFBABA;
            background-image: url('https://i.imgur.com/GnyDvKN.png');
        }
        .validation {
            color: #D63301;
            background-color: #FFCCBA;
            background-image: url('https://i.imgur.com/GnyDvKN.png');
        }
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        .buttonE {
            background-color: #D63301; /* Green */
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        .button1 {
            padding: 10px 24px;
        }
        .center {
            margin: auto;
            width: 50%;
            border: 1px solid #fff;
            padding: 10px;
        }
    </style>
}

<div class="info" style="text-align:center;">
    <div class="@(Model.Status == (int)EServicesCms.Common.UserStatus.Active ? "success":"error") center">
        @{
            if (Model.Status == (int)EServicesCms.Common.UserStatus.Active)
            {
                <div style="margin-left:35px;"><h2>@Html.Raw(Model.Message)</h2></div>
                <a id="aSuccess" href="@EServicesCms.Common.Helper.URL_Encode(Url.Action("Index", "Dashboard", null, Request.Url.Scheme, null) +"?id=1")">
                    <button class="button button1" type="button">@EServicesCms.Common.DbManager.GetText("Services", "lblSuccess", "Please wait redirecting.....")</button>
                </a>
            }
            else
            {
                <div style="margin-left:35px;"><h2>@Html.Raw(Model.Message)</h2></div>
                <a id="aFailed" href="@EServicesCms.Common.WebConfig.GetStringValue("SsoLogout_Url")">
                    <button class="buttonE button1" type="button">@EServicesCms.Common.DbManager.GetText("Services", "lblFailed", "Logout")</button>
                </a>
            }
        }
    </div>
</div>
<script type="text/javascript">
    if (@Model.Status == 1) {
        window.setTimeout('$("#aSuccess")[0].click();', 2000);
    }
    else {
        //window.setTimeout('$("#aFailed")[0].click();', 2000);
    }
</script>